<p><%= link_to "Add a New Genre", new_genres_url %></p>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th></th>
  </tr>
  <% @genres.each do |genre| %>
    <tr>
      <td><%= link_to genre.name, genre_url(genre.id) %></td>
      <td><%= link_to "Edit", "/genres/#{genre.id}/edit" %></td>
    </tr>
  <% end %>

</table>
