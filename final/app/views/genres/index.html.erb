<% if session[:user_id].present? %>
  <p><%= link_to "Add a New Genre", new_genres_url %></p>
<% end %>

<%= paginate(@genres) %>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>
  <% @genres.each do |genre| %>
    <tr>
      <td><%= link_to genre.name, genre_url(genre.id) %></td>
      <td><%= link_to "Edit", "/genres/#{genre.id}/edit" %></td>
      <td><%= link_to "Delete", "/genres/#{genre.id}", :method => 'delete' %></td>
    </tr>
  <% end %>

</table>
