<% if not @genre.nil? and @genre.errors.any? %>
  <ul class="errors">
    <% @genre.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_tag "/genres" do %>

  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, nil, placeholder: 'Example: Music' %>
  </div>

  <div class="form-group">
    <textarea cols="80" rows="5" placeholder="Description" name="description"></textarea>
  </div>

  <input type="submit" name="commit" value="Add Genre">

<% end %>