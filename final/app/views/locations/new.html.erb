<% if not @location.nil? and @location.errors.any? %>
  <ul class="errors">
    <% @location.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_tag "/locations" do %>

  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, nil, placeholder: 'Example: Highland Park', size:30%>
  </div>

  <div class="form-group">
    <%= label_tag :address %>
    <%= text_field_tag :address, nil, placeholder: 'Example: Highland Park, Chicago, IL', size:40 %>
  </div>

  <div class="form-group">
    <%= label_tag :photo_url %>
    <%= text_field_tag :photo_url, nil, size:40 %>
  </div>

  <div class="form-group">
    <textarea cols="80" rows="5" placeholder="Description" name="description"></textarea>
  </div>

  <input type="submit" name="commit" value="Add Location">

<% end %>