<% if not @artist.nil? and @artist.errors.any? %>
  <ul class="errors">
    <% @artist.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_tag "/artists" do %>

  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, nil, placeholder: 'Example: Katy Perry' %>
  </div>

  <div class="form-group">
    <label for="website">Website:</label>
    <input size="80" name="website" id="website" type="url">
  </div>

  <input type="submit" name="commit" value="Add Artist">

<% end %>